<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:id="@+id/pinned_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            app:cardElevation="20dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/bgcolor"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/pinned_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tx_movie_title_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_vertical|left"
                        android:paddingVertical="3dp"
                        android:text="Avengers : Endgame"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3">

                        <TextView
                            android:id="@+id/tx_movie_adult_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical|right"
                            android:paddingVertical="5dp"
                            android:text="18 + "
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/adult_line_2"
                            android:layout_width="3dp"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="#778899" />

                        <TextView
                            android:id="@+id/tx_movie_release_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center|center_horizontal"
                            android:paddingVertical="5dp"
                            android:text="2021-01-15"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="3dp"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="#778899" />

                        <TextView
                            android:id="@+id/tx_movie_language_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center_vertical|left"
                            android:paddingVertical="5dp"
                            android:text="en"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center_vertical|right"
                            android:paddingVertical="4dp"
                            android:src="@drawable/icon_vote" />

                        <TextView
                            android:id="@+id/tx_movie_vote_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:paddingRight="30dp"
                            android:text="8.3"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tx_movie_vote_count_2"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center_vertical"
                            android:text="Votes : 25876"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:includeFontPadding="true"
                android:paddingVertical="10dp"
                android:paddingLeft="13dp"
                android:text="Overview : "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:includeFontPadding="true"
                android:padding="13dp"
                android:text="Hello"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>